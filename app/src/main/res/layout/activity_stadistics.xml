<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Stadistics">

    <!-- Fondo Degradado -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background" />

    <!-- Logo Gota -->
    <LinearLayout
        android:id="@+id/imgStadisticsLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="138dp">

            <!-- Fondo con radio -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/whiteradius_background" />

            <!-- Imagen de la gota -->
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gotita"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>

    <!-- Fondo Blanco -->
    <ImageView
        android:id="@+id/imgLogOutFondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="190dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"
        android:background="@drawable/white_rectangle"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/optionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Background of options -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/options_stadistics"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/dailyButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/option1"
                android:textColor="@android:color/white"
                android:layout_margin="3dp"/>

            <ImageButton
                android:id="@+id/weeklyButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/option2"
                android:text="Semanalmente"
                android:layout_margin="3dp"
                android:textColor="@android:color/white"/>

            <ImageButton
                android:id="@+id/monthlyButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/option3"
                android:layout_margin="3dp"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </FrameLayout>


    <!-- Gráfico -->
    <FrameLayout
        android:id="@+id/graphImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/optionsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/white_rectangle_shadow"
             />
        <ImageView
            android:layout_width="358.5dp"
            android:layout_height="152dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:background="@drawable/graphic"
            />
    </FrameLayout>

    <!-- Histórico -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="@id/graphImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Histórico"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/naranja"
            android:textStyle="bold"
            android:textSize="32sp"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 de junio de 2024"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Segundos encendida:"
                android:textSize="18dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txt_Segundos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text=""
                android:textSize="32dp"
                android:textColor="@android:color/black" />

        </LinearLayout>
    </LinearLayout>

    <!-- Cinta Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btnStadisticsButton"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:background="@drawable/boton_menu_on"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="#00DDC963"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="#00DDC963"/>

        <ImageButton
            android:id="@+id/btnStadisticsLogOut"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:background="@drawable/usuario_off"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
